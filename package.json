{
	"name": "project-einstein-be",
	"version": "1.0.0",
	"main": "index.js",
	"license": "MIT",
	"private": true,
	"scripts": {
		"dev": "nodemon -L --config nodemon.json src/index.ts",
		"build": "rm -rf dist && tsc",
		"start": "yarn build && node src/index.js",
		"lint": "eslint --ignore-path .gitignore --ext .js,.ts .",
		"format": "prettier --ignore-path .gitignore --write \"**/*.+(js|ts|json)\"",
		"test": "jest --coverage",
		"test:watch": "jest --coverage --watchAll --findRelatedTests",
		"test:clean": "rm -rf coverage",
		"view:coverage": "npx serve coverage/lcov-report",
		"docker:dev": "yarn docker:down && docker-compose -f docker-compose.dev.yml up --build --remove-orphans",
		"docker:test": "yarn docker:down && docker-compose -f docker-compose.test.yml up --build --remove-orphans",
		"docker:dev:down": "docker-compose -f docker-compose.dev.yml down -v",
		"docker:test:down": "docker-compose -f docker-compose.test.yml down -v",
		"docker:down": "yarn docker:dev:down && yarn docker:test:down",
		"prepare": "husky install"
	},
	"dependencies": {
		"cors": "^2.8.5",
		"dotenv": "^16.0.0",
		"express": "^4.17.3",
		"helmet": "^5.0.2"
	},
	"devDependencies": {
		"@types/cors": "^2.8.12",
		"@types/express": "^4.17.13",
		"@types/helmet": "^4.0.0",
		"@types/jest": "^27.4.1",
		"@types/node": "^17.0.23",
		"@typescript-eslint/eslint-plugin": "^5.18.0",
		"@typescript-eslint/parser": "^5.18.0",
		"eslint": "^8.12.0",
		"eslint-config-prettier": "^8.5.0",
		"husky": "^7.0.0",
		"jest": "^27.5.1",
		"lint-staged": "^12.3.7",
		"nodemon": "^2.0.15",
		"prettier": "^2.6.2",
		"supertest": "^6.2.2",
		"ts-jest": "^27.1.4",
		"ts-node": "^10.7.0",
		"typescript": "^4.6.3"
	},
	"lint-staged": {
		"**/*.{ts, js}": [
			"yarn lint",
			"yarn format",
			"yarn test --findRelatedTests --bail"
		]
	}
}
