{
	"compilerOptions": {
		"target": "ES6",
		"module": "commonjs",
		"outDir": "./dist",
		"skipLibCheck": true,
		"esModuleInterop": true,
		"noUnusedLocals": true
	},
	"include": ["src"],
	"exclude": [
		"node_modules",
		"**/*.test.ts",
		"**/*.spec.ts",
		"src/__test__/*",
		"jest.config.ts",
		"coverage"
	]
}
